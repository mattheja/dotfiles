# symlinked to ~/.gitconfig

[core]
    editor = zed

[color]
	ui = auto

[column]
	ui = auto

[branch]
	sort = -committerdate

[push]
	autoSetupRemote = true
	followTags = true

[fetch]
	all = true
	prune = true
	pruneTags = true

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[merge]
	conflictstyle = zdiff3

[core]
	excludesfile = ~/.config/git/gitignore

[init]
	defaultBranch = main

[includeIf "gitdir:~/Projects/prometheus-meta/helm-charts"]
    path = ~/.config/git/gitconfig-bigleaf

[includeIf "gitdir:~/Projects/"]
    path = ~/.config/git/gitconfig-personal

[includeIf "gitdir:~/Bigleaf/assembla"]
    path = ~/.config/git/gitconfig-assembla

[includeIf "gitdir:~/Bigleaf/"]
    path = ~/.config/git/gitconfig-bigleaf
