// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git_panel": {
    "dock": "left"
  },
  "git_status": true,
  "auto_install_extensions": {
    "ansible": true,
    "catppuccin": true,
    "dockerfile": true,
    "helm": true,
    "html": true,
    "jinja2": true,
    "make": true,
    "puppet": true,
    "terraform": true
  },
  "agent": {
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "version": "2"
  },
  "ui_font_size": 17,
  "buffer_font_size": 17,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },

  "file_types": {
    "Jinja2": ["**/cosmere/*.j2", "**/cosmere/*.j2", "**/core-ansible/*.j2"],
    "Ansible": [
      "**/cosmere/*.yml",
      "**/cosmere/*.yaml",
      "**/core-ansible/*.yaml",
      "**/core-ansible/*.yml",
      "**/core-ansible/group_vars/*",
      "**/core-ansible/host_vars/*",
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  }
}
