// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "confirm_quit": true,
  "agent_servers": {
      "gemini": {
        "ignore_system_version": false,
        "args": ["--model gemini-2.5-pro"]
      }
  },
  "features": {
      "edit_prediction_provider": "copilot"
    },
  "agent_ui_font_size": 17.0,
  "edit_predictions": {
    "disabled_globs": ["~/.config", "~/Bigleaf/0_NOTES/*"],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "git_panel": {
    "tree_view": true,
    "sort_by_path": false,
    "dock": "left"
  },
  "auto_install_extensions": {
    "ansible": true,
    "catppuccin": true,
    "dockerfile": true,
    "helm": true,
    "html": true,
    "jinja2": true,
    "make": true,
    "puppet": false,
    "terraform": true
  },
  "agent": {
    "enable_feedback": false,
    "always_allow_tool_actions": true,
    "single_file_review": false,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5"
    }
  },
  "ui_font_size": 17,
  "format_on_save": "off",
  "buffer_font_size": 17,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },

  "file_types": {
    "Jinja2": ["**/cosmere/*.j2", "**/cosmere/*.j2", "**/core-ansible/*.j2"],
    "Helm": ["**/helm-charts/**/*.yaml", "**/Projects/home_k8s/**/*.yaml" ],
    "Ansible": [
      "**/cosmere/*.yml",
      "**/cosmere/*.yaml",
      "**/core-ansible/*.yaml",
      "**/core-ansible/*.yml",
      "**/core-ansible/group_vars/*",
      "**/core-ansible/host_vars/*",
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  }
}
