// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "disabled_globs": ["~/Bigleaf/*"],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "git_panel": {
    "dock": "left"
  },
  "git_status": true,
  "auto_install_extensions": {
    "ansible": true,
    "catppuccin": true,
    "dockerfile": true,
    "helm": true,
    "html": true,
    "jinja2": true,
    "make": true,
    "puppet": true,
    "terraform": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "single_file_review": false,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "ui_font_size": 17,
  "format_on_save": "off",
  "buffer_font_size": 17,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },

  "file_types": {
    "Jinja2": ["**/cosmere/*.j2", "**/cosmere/*.j2", "**/core-ansible/*.j2"],
    "Helm": ["**/helm-charts/**/*.yaml"],
    "Ansible": [
      "**/cosmere/*.yml",
      "**/cosmere/*.yaml",
      "**/core-ansible/*.yaml",
      "**/core-ansible/*.yml",
      "**/core-ansible/group_vars/*",
      "**/core-ansible/host_vars/*",
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  },
  "lsp": {
    "puppet-languageserver": {
      "binary": {
        "arguments": ["--stdio"]
      }
    }
  }
}
